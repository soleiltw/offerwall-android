<resources>

	<style name="Theme.Offerwall" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarItemBackground">@drawable/selectable_background_offerwall</item>
		<item name="popupMenuStyle">@style/PopupMenu.Offerwall</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Offerwall</item>
		<item name="actionBarTabStyle">@style/ActionBarTabStyle.Offerwall</item>
		<item name="actionDropDownStyle">@style/DropDownNav.Offerwall</item>
		<item name="actionBarStyle">@style/ActionBar.Solid.Offerwall</item>
		<item name="actionModeBackground">@drawable/cab_background_top_offerwall</item>
		<item name="actionModeSplitBackground">@drawable/cab_background_bottom_offerwall</item>
		<item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Offerwall</item>

		<!-- Light.DarkActionBar specific -->
		<item name="actionBarWidgetTheme">@style/Theme.Offerwall.Widget</item>

	</style>

	<style name="ActionBar.Solid.Offerwall" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@drawable/ab_solid_offerwall</item>
		<item name="backgroundStacked">@drawable/ab_stacked_solid_offerwall</item>
		<item name="backgroundSplit">@drawable/ab_bottom_solid_offerwall</item>
		<item name="progressBarStyle">@style/ProgressBar.Offerwall</item>
	</style>

	<style name="ActionBar.Transparent.Offerwall" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/ab_transparent_offerwall</item>
		<item name="progressBarStyle">@style/ProgressBar.Offerwall</item>
	</style>

	<style name="PopupMenu.Offerwall" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_offerwall</item>
	</style>

	<style name="DropDownListView.Offerwall" parent="@style/Widget.AppCompat.ListView.DropDown">
		<item name="android:listSelector">@drawable/selectable_background_offerwall</item>
	</style>

	<style name="ActionBarTabStyle.Offerwall" parent="@style/Widget.AppCompat.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_offerwall</item>
	</style>

	<style name="DropDownNav.Offerwall" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
		<item name="android:background">@drawable/spinner_background_ab_offerwall</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_offerwall</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_offerwall</item>
	</style>

	<style name="ProgressBar.Offerwall" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_offerwall</item>
	</style>

	<style name="ActionButton.CloseMode.Offerwall" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_offerwall</item>
	</style>

	<!-- this style is only referenced in a Light.DarkActionBar based theme -->
	<style name="Theme.Offerwall.Widget" parent="@style/Theme.AppCompat">
		<item name="popupMenuStyle">@style/PopupMenu.Offerwall</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Offerwall</item>
	</style>

</resources>
